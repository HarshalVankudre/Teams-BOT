# ===========================================
# TEAMS BOT CONFIGURATION TEMPLATE
# Copy this file to .env and fill in your values
# ===========================================

# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4o-mini
REASONING_EFFORT=medium

# Azure Bot Configuration (REQUIRED)
BOT_APP_ID=your-bot-app-id
BOT_APP_PASSWORD=your-bot-app-password

# Pinecone Vector Database (REQUIRED for RAG)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_HOST=https://your-index.svc.pinecone.io
PINECONE_NAMESPACE=rueko-documents
PINECONE_MACHINERY_NAMESPACE=machinery-data

# PostgreSQL Configuration (REQUIRED for Hybrid RAG)
POSTGRES_HOST=your-postgres-host
POSTGRES_PORT=5432
POSTGRES_DB=sema
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password

# Redis Configuration (OPTIONAL - falls back to in-memory)
REDIS_URL=redis://localhost:6379
CONVERSATION_TTL_HOURS=24

# Tavily Web Search (OPTIONAL)
TAVILY_API_KEY=your-tavily-api-key
ENABLE_WEB_SEARCH=true
WEB_SEARCH_MAX_RESULTS=3

# RAG Settings
USE_CUSTOM_RAG=true
USE_HYBRID_RAG=true
SEARCH_TOP_K=5
RERANK_TOP_N=3

# Embedding Model
EMBEDDING_MODEL=text-embedding-3-large

# Chunking Model (for document processing)
CHUNKING_MODEL=gpt-4o-mini
CHUNKING_REASONING=low

# Legacy OpenAI file_search (only if USE_CUSTOM_RAG=false)
VECTOR_STORE_ID=vs_your_vector_store_id
